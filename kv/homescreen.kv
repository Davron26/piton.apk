#:import Window kivy.core.window.Window

<HomeScreen>:
    FloatLayout:
        size: 500, 500
        Image:
            source: 'images/background.gif'
            allow_stretch: True
            keep_ratio: False
            pos: 0, Window.height / 4
        Image:
            source: 'images/item.gif'
            allow_stretch: True
            keep_ratio: False
            size_hint_max: Window.height / 60, (Window.height / 60) + 1
        Image:
            id: piton
            source: 'images/figure-down.gif'
            allow_stretch: True
            keep_ratio: False
            size_hint_max: Window.height / 45, Window.height / 45
            pos: Window.width / 2, Window.height / 2
        GridLayout:
            rows: 2
            padding: [0, Window.height / 4, 0, 0]
            size_hint: (1, .5)
            GridLayout:
                rows: 2
                cols: 2
                Label:
                    text: 'Очки:'
                Label:
            Button:
                on_press: app.u_animation()
                Image:
                    center: self.parent.center
                    source: 'images/up.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                text: 'Пауза'
                on_press: app.runpause()
            Button:
                on_press: app.l_animation()
                Image:
                    center: self.parent.center
                    source: 'images/left.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                on_press: app.d_animation()
                Image:
                    center: self.parent.center
                    source: 'images/down.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                on_press: app.r_animation()
                Image:
                    center: self.parent.center
                    source: 'images/right.png'
                    size: Window.height / 25, Window.height / 25
