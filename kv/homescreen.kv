#:import Window kivy.core.window.Window

<HomeScreen>:
    FloatLayout:
        id: fl
        size: 500, 500
        Image:
            source: 'images/background.gif'
            allow_stretch: True
            keep_ratio: False
            pos: 0, Window.height / 4
        Image:
            id: itm
            source: 'images/item.gif'
            allow_stretch: True
            keep_ratio: False
            size_hint_max: Window.height / 60, (Window.height / 60) + 1
        GridLayout:
            id: button_layout
            rows: 2
            padding: [0, Window.height / 4, 0, 0]
            size_hint: (1, .5)
            GridLayout:
                id: bl
                rows: 2
                cols: 2
                Label:
                    id: point_text
                    text: 'Очки:'
                Label:
                    id: point
                    text: '0'
            Button:
                id: btn_u
                on_press: app.u_animation()
                Image:
                    center: self.parent.center
                    source: 'images/up.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                id: pause
                text: 'Пауза'
                on_press: app.runpause()
            Button:
                on_press: app.l_animation()
                Image:
                    center: self.parent.center
                    source: 'images/left.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                on_press: app.d_animation()
                Image:
                    center: self.parent.center
                    source: 'images/down.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                on_press: app.r_animation()
                Image:
                    center: self.parent.center
                    source: 'images/right.png'
                    size: Window.height / 25, Window.height / 25
