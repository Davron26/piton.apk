#:import Window kivy.core.window.Window

<LoseScreen>:
    FloatLayout:
        size: 500, 500
        Label:
            id: los
            text: 'Вы проиграли'
            pos: [0, 0 + Window.height / 4]
        Label:
            text: 'Piton ver.1.2'
            pos: [0, (pause_button.pos[1] * -1) - 25]
        Label:
            text: '(c) Davron Tokhirov, 2020'
            pos: [0, (pause_button.pos[1] * -1) - 75]
        GridLayout:
            cols: 1
            size_hint_max: Window.width / 5, Window.height / 10
            pos: [Window.width / 2.5, Window.height / 2]
            Button:
                id: restart
                text: 'Рестарт'
                on_press: app.restart()
        GridLayout:
            rows: 2
            padding: [0, Window.height / 4, 0, 0]
            size_hint: (1, .5)
            GridLayout:
                rows: 2
                cols: 2
                Label:
                    id: ochko
                    text: 'Очки:'
                Label:
                    id: point2
            Button:
                on_press: app.u_animation()
                Image:
                    center: self.parent.center
                    source: 'images/up.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                id: pause_button
                text: 'Пауза'
                on_press: app.runpause()
            Button:
                on_press: app.l_animation()
                Image:
                    center: self.parent.center
                    source: 'images/left.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                on_press: app.d_animation()
                Image:
                    center: self.parent.center
                    source: 'images/down.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                on_press: app.r_animation()
                Image:
                    center: self.parent.center
                    source: 'images/right.png'
                    size: Window.height / 25, Window.height / 25
