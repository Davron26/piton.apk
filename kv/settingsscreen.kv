#:import Window kivy.core.window.Window

<SettingsScreen>:
    FloatLayout:
        size: 500, 500
        GridLayout:
            rows: 3
            padding: [0, 0, 0, Window.height / 4]
            ToggleButton:
                text: 'Русский язык'
                group: 'language'
                state: 'down'
                on_press: app.russian()
            ToggleButton:
                text: 'English language'
                group: 'language'
                on_press: app.english()
            ToggleButton:
                id: proz
                text: 'Сквозные края'
                group: 'edges'
                on_press: app.funproz()
            ToggleButton:
                id: real
                text: 'Закрытые края'
                group: 'edges'
                state: 'down'
                on_press: app.funreal()
            Widget:
            Button:
                id: restart2
                text: 'Рестарт'
                on_press: app.restart()
        GridLayout:
            rows: 2
            padding: [0, Window.height / 4, 0, 0]
            size_hint: (1, .5)
            GridLayout:
                rows: 2
                cols: 2
                Label:
                    id: ochko2
                    text: 'Очки:'
                Label:
            Button:
                on_press: app.u_animation()
                Image:
                    center: self.parent.center
                    source: 'images/up.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                id: pause2
                text: 'Продолжить'
                on_press: app.runpause()
            Button:
                on_press: app.l_animation()
                Image:
                    center: self.parent.center
                    source: 'images/left.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                on_press: app.d_animation()
                Image:
                    center: self.parent.center
                    source: 'images/down.png'
                    size: Window.height / 25, Window.height / 25
            Button:
                on_press: app.r_animation()
                Image:
                    center: self.parent.center
                    source: 'images/right.png'
                    size: Window.height / 25, Window.height / 25
